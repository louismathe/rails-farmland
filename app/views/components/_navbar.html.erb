<div class="navigation">
  <!-- Logo -->
  <%= link_to root_path, class: "navigation-brand" do %>
    <%= image_tag "logo.png" %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navigation-right hidden-xs hidden-sm">
    <%= link_to "Farms", farms_path, class: "navigation-item navigation-link" %>

    <!-- When logged in -->
    <% if user_signed_in? %>

      <!-- Avatar with dropdown menu -->
      <div class="navigation-item">
        <div class="dropdown">
          <% avatar_url = current_user.facebook_picture_url || "http://placehold.it/30x30" %>
          <%= image_tag avatar_url, class: "avatar dropdown-toggle", id: "navbar-menu", "data-toggle" => "dropdown" %>

          <ul class="dropdown-menu dropdown-menu-right navigation-dropdown-menu">
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-shopping-cart" aria-hidden="true"></i></i> Cart
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i> Log out
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>

      <!-- Login link (when logged out) -->
      <%= link_to 'Login', new_user_session_path, class: "navigation-item navigation-link" %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navigation-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navigation-dropdown-menu">
        <li><%= link_to 'Farms', farms_path %></li>
        <li role="separator" class="divider"></li>
        <% if user_signed_in? %>
        <li>
          <%= link_to "#" do %>
            <i class="fa fa-shopping-cart" aria-hidden="true"></i></i> Cart
          <% end %>
        </li>
        <li>
          <%= link_to destroy_user_session_path, method: :delete do %>
            <i class="fa fa-sign-out"></i> Log out
          <% end %>
        </li>
        <% else %>
        <li>
          <%= link_to 'Login', new_user_session_path, class: "navigation-item navigation-link" %>
        </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
