<div id="map" style="width: 100%; height: 600px;"></div>

<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    var handler = Gmaps.build('Google');
    handler.buildMap({ internal: { id: 'map' } }, function() {
      markers = handler.addMarkers(<%= raw @hash.to_json %>);
      handler.bounds.extendWith(markers);
      handler.fitMapToBounds();
      if (markers.length == 0) {
        handler.getMap().setZoom(2);
      } else if (markers.length == 1) {
        handler.getMap().setZoom(14);
      }
    });
  <% end %>
<% end %>

<div class="container">
  <div class="farms">
    <h1>Find the best products around you!</h1>
    <div class="row">
      <% @farms.each do |farm| %>
        <div class="col-sm-4">
          <%= link_to farm_path(farm) do %>
            <div class="card-container" style="background-image: linear-gradient(rgba(40, 40, 40 ,0.4), rgba(40, 40, 40 ,0.7)), url('<%= farm.photo %>');">
              <div class="card">
                <h2><%= farm.name %></h2>
                <span><i class="fa fa-map-marker" aria-hidden="true"></i>  <%= farm.address %></span>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
