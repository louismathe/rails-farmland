<input type="hidden" id="address" value="<%= @farm.address %>">

<div class="farm-banner" style="background-image: url('<%= image_path @farm.photo %>');">
  <!-- Add farm image after Farm model updating -->

  <h1><%= @farm.name %></h1>
</div>

<div class="container">
  <div class="products">
    <h2>Products</h2>
    <% @farm.products.each do |product| %>

      <div class="product">
        <h3><%= product.name.capitalize %></h3>
        <div class="row">
          <div class="col-sm-6">
            <div class="picture" style="background-image: url('<%= image_path product.photo %>');">
            </div>
            <!-- Add product image after Product model updating -->

          </div>
          <div class="col-sm-5 col-sm-offset-1">
            <p class="price">Unit price: <strong><%= product.price %>â‚¬</strong></p>
            <% if user_signed_in? %>
              <div class="form">
                <%= simple_form_for @order do |f| %>
                <%= f.hidden_field :product_id, value: product.id %>
                <%= f.input :quantity %>
                <%= f.input :delivery_time %>
                <%= f.submit class: 'btn btn-lg btn-primary' %>
                <% end %>
              </div>
            <% else %>
              <div class="login-alert">
                You must login before making an order.
                <%= link_to 'Login', new_user_session_path %>
                <%= link_to 'Signup', new_user_registration_path %>
                <%= link_to 'Connect with Facebook', user_facebook_omniauth_authorize_path %>
              </div>
            <% end %>
          </div>
          <div class="col-sm-12">
            <p class="description"><%= product.description %></p>
          </div>
        </div>
      </div>
    <% end %>

  </div>
</div>

<div class="container">
  <div class="farm">
    <h2>About the farm</h2>
    <div class="row">
      <div class="col-sm-6">
